{
  "app": {
    "name": "FinanTidy",
    "version": "1.0.0",
    "organization": "Sodalite Development",
    "domain": "finantiday.com"
  },
  "database": {
    "master_db_name": "master.sqlite",
    "data_directory": "~/FinanTidy/data",
    "backup_directory": "~/FinanTidy/backup",
    "auto_backup": true,
    "backup_interval_hours": 24
  },
  "ui": {
    "theme": "default",
    "language": "vi_VN",
    "font_size": 12,
    "window_state_save": true
  },
  "security": {
    "password_min_length": 8,
    "session_timeout_minutes": 60,
    "auto_lock": false
  },
  "features": {
    "auto_sync": false,
    "ai_suggestions": true,
    "export_enabled": true,
    "debug_mode": false
  },
  "api": {
    "timeout_seconds": 30,
    "retry_attempts": 3,
    "rate_limit_per_minute": 60
  }
}
